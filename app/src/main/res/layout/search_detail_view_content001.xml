<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUrlView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/textAppNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New App Name"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New App Name"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textRegNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New App Name"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textLinkUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="링크"
                android:textSize="20dp"
                android:textStyle="bold"
                android:autoLink="web"
                />


            <TextView
            android:id="@+id/textRegNm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.naver.com"
            android:textSize="20dp"
            android:textStyle="bold"
            android:autoLink="web"
            />

        </LinearLayout>

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:text="New App desc"
            android:textColor="#0223e0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="New Down Cnt"
            android:textColor="#4902d6"
            android:textSize="20dp" />

    </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>